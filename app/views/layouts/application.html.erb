<!DOCTYPE html>
<html>
  <head>
    <title>Groupmatcher</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render "shared/navbar" %>
    
    <div class="container">
      <%if notice != nil %>
        <p class="alert alert-info"><%= notice %></p>
      <%end%>
      <%if alert != nil %>
        <p class="alert alert-danger"><%= alert %></p>
      <%end%>
      <%= yield %>
    </div>
  </body>
</html>
