<h2>Here are your matching result!</h2>

  <h2><%= @match.day %></h2>
  <table class="table table-striped table-bordered">
    <% @matches.each do |match| %>
    <tr>
      <td><%= match.day %></td>
      <td><%= match.id %></td>
      <% match.matches.each do |group| %>
        <% if group.include?(current_user.profile.full_name)%>
         <td><%= group.join(" & ") %></td>
        <% end %>
      <% end %>
    </tr>
    <% end %>
</table>
